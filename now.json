// Update file here with Now settings, sources, and routes for cloud build

{
  "version": 2,
  "name": "focustimer",
  "public": true,
  "builds": [
    { "src": "api/users/index.js", "use": "@now/node" },
    { "src": "index.js", "use": "@now/node" }
  ],
  "routes": [{ "src": "/api/(.*)", "dest": "/api/users/index.js" }],
  "env": {
    "DATABASE_URL": "@database_url",
    "DATABASE_USERNAME": "@database_username",
    "DATABASE_PASSWORD": "@database_pw",
    "ENVIRONMENT": "@environment"
  }
}

